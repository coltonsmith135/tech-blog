{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/posts/{{post.id}}">{{post.userName}}</a>
    </h2>
    <p>
    <p>Created by {{post.userName}} on {{format_date }}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}